---
// src/pages/index.astro
// No server-side JavaScript needed for this static page yet.
// You could define variables or import components here if needed.
const pageTitle = "Placeholder - awfixer.link";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{pageTitle}</title>

        <!-- Google Fonts Import -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap"
            rel="stylesheet"
        />

        <style>
            /* Ensure html and body take full height and remove default margin */
            html,
            body {
                height: 100%;
                margin: 0;
                padding: 0;
                /* Apply Inter font globally for consistency */
                font-family: "Inter", sans-serif;
            }

            #background {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                z-index: -1;
                filter: blur(15px);
                object-fit: cover; /* Ensure background covers the area */
            }

            #container {
                /*
                Font family is inherited from body,
                but can be specified here if needed for more specific scoping.
            */
                min-height: 100vh; /* Use viewport height */
                display: flex;
                align-items: center; /* Vertical centering */
                justify-content: center; /* Horizontal centering */
                padding: 16px;
                box-sizing: border-box; /* Include padding in height calculation */
                text-align: center; /* Center text within the container */
            }

            main {
                max-width: 600px;
                background-color: rgba(
                    255,
                    255,
                    255,
                    0.85
                ); /* Slightly more opaque for readability */
                padding: 2rem;
                border-radius: 16px; /* Rounded corners */
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1); /* Slightly enhanced shadow */
            }

            #hero {
                display: flex;
                align-items: center; /* Align items horizontally in the center */
                flex-direction: column;
            }

            h1 {
                font-size: 24px; /* Slightly larger for emphasis */
                margin-top: 0;
                margin-bottom: 1.5em;
                color: #111827;
                line-height: 1.5;
                font-weight: 700; /* Bolder heading */
            }

            #links {
                display: flex;
                gap: 16px;
                flex-wrap: wrap; /* Allow buttons to wrap on smaller screens */
                justify-content: center; /* Center the buttons if they wrap */
            }

            #links a {
                display: flex;
                align-items: center;
                justify-content: center;
                padding: 12px 18px; /* Consistent padding */
                color: #111827;
                text-decoration: none;
                transition: all 0.2s ease-in-out;
                border-radius: 10px;
                font-weight: 500; /* Medium weight for link text */
                border: 1px solid transparent; /* Base border */
            }

            #links a:hover {
                color: #000; /* Darker on hover */
                transform: translateY(-2px);
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow on hover for non-button links */
            }

            #links a svg {
                height: 1.1em;
                margin-left: 8px;
            }

            #links a.button {
                color: white;
                background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
                box-shadow:
                    inset 0 0 0 1px rgba(255, 255, 255, 0.15),
                    /* Slightly more visible inset */ 0 2px 4px
                        rgba(0, 0, 0, 0.2);
                border: none; /* Remove border for gradient buttons */
            }

            #links a.button:hover {
                color: white;
                box-shadow:
                    inset 0 0 0 1px rgba(255, 255, 255, 0.2),
                    0 4px 8px rgba(0, 0, 0, 0.25);
                transform: translateY(-2px) scale(1.02); /* Add a slight scale effect */
            }

            /* Responsive adjustments */
            @media screen and (max-width: 480px) {
                #links a {
                    padding: 14px 20px; /* Larger touch targets */
                    width: 100%;
                    box-sizing: border-box;
                }
                main {
                    padding: 1.5rem;
                }
                h1 {
                    font-size: 20px;
                }
            }
        </style>
    </head>
    <body>
        <!-- Background Image -->
        <img
            id="background"
            src="https://awiassets.sfo3.cdn.digitaloceanspaces.com/jinx/IMG_9713.jpg"
            alt="Blurred city background"
            fetchpriority="high"
            onerror="this.style.display='none'"
            <!--
            Hide
            if
            image
            fails
            --
        />
        />

        <!-- Main Content Container -->
        <div id="container">
            <main>
                <section id="hero">
                    <h1>
                        This is a placeholder site while we work on the new
                        website for awfixer.links. While you are here, you can
                        check out the buttons below.
                    </h1>
                    <section id="links">
                        <a
                            class="button"
                            href="https://foundation.awfixer.wiki"
                        >
                            See information about us
                        </a>
                        <a href="https://discord.awfixer.wiki" class="button">
                            {
                                /* Added button class for consistency if desired, or remove if Discord link should be styled differently */
                            }
                            Join our Discord
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 127.14 96.36"
                                fill="currentColor"
                                aria-hidden="true"
                                focusable="false"
                                style="height: 1.1em; margin-left: 8px;"
                                {/* Astro might prefer inline styles for SVGs or class-based */}
                            >
                                <path
                                    d="M107.7 8.07A105.15 105.15 0 0 0 81.47 0a72.06 72.06 0 0 0-3.36 6.83 97.68 97.68 0 0 0-29.11 0A72.37 72.37 0 0 0 45.64 0a105.89 105.89 0 0 0-26.25 8.09C2.79 32.65-1.71 56.6.54 80.21a105.73 105.73 0 0 0 32.17 16.15 77.7 77.7 0 0 0 6.89-11.11 68.42 68.42 0 0 1-10.85-5.18c.91-.66 1.8-1.34 2.66-2a75.57 75.57 0 0 0 64.32 0c.87.71 1.76 1.39 2.66 2a68.68 68.68 0 0 1-10.87 5.19 77 77 0 0 0 6.89 11.1 105.25 105.25 0 0 0 32.19-16.14c2.64-27.38-4.51-51.11-18.9-72.15ZM42.45 65.69C36.18 65.69 31 60 31 53s5-12.74 11.43-12.74S54 46 53.89 53s-5.05 12.69-11.44 12.69Zm42.24 0C78.41 65.69 73.25 60 73.25 53s5-12.74 11.44-12.74S96.23 46 96.12 53s-5.04 12.69-11.43 12.69Z"
                                ></path>
                            </svg>
                        </a>
                    </section>
                </section>
            </main>
        </div>
    </body>
</html>
